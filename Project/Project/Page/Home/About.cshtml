@{
    ViewData["Title"] = "Home Page";

    // Sample project data (could be passed from the controller in a real application)
    var projects = new List<string>
    {
        "Project 1 - In Progress",
        "Project 2 - In Progress",
        "Project 3 - In Progress",
        "Project 4 - In Progress"
    };
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <!-- Custom CSS -->
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .hero-section {
            background: linear-gradient(135deg, #007bff, #6610f2);
            color: white;
            padding: 60px 0;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .hero-section h1 {
            font-size: 3rem;
            font-weight: bold;
            margin-bottom: 20px;
        }
        .project-card {
            transition: transform 0.3s, box-shadow 0.3s;
            border: none;
            border-radius: 10px;
            overflow: hidden;
        }
        .project-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }
        .btn-github {
            background-color: #24292e;
            color: white;
            border-radius: 5px;
            padding: 10px 20px;
            text-decoration: none;
        }
        .btn-github:hover {
            background-color: #333;
            color: white;
        }
        .project-list {
            margin-top: 40px;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Hero Section -->
        <div class="hero-section text-center mt-5">
            <h1 class="display-4">Welcome to My Project Hub</h1>
            <p class="lead">Explore my latest projects hosted on <a href="https://github.com/NareshKoirala/MineRepo/tree/main/Projects" class="text-white text-decoration-underline" target="_blank">GitHub</a>.</p>
            <p>Built with <strong>ASP.NET Core MVC</strong> for a seamless and modern web experience.</p>
            <a href="https://github.com/NareshKoirala/MineRepo" class="btn btn-github mt-3" target="_blank">Visit My GitHub Repo</a>
        </div>

        <!-- Project List Section -->
        <div class="project-list">
            <h2 class="text-center my-5">Projects in Progress</h2>
            <div class="row row-cols-1 row-cols-md-2 g-4">
                @foreach (var project in projects)
                {
                    <div class="col">
                        <div class="card project-card">
                            <div class="card-body">
                                <h5 class="card-title">@project</h5>
                                <p class="card-text">This project is currently under development. Check back soon for updates!</p>
                                <button class="btn btn-primary btn-sm toggle-details">View Details</button>
                                <div class="project-details" style="display: none;">
                                    <p class="mt-3">More details coming soon...</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS and jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <!-- Custom JavaScript -->
    <script>
        $(document).ready(function () {
            $('.toggle-details').click(function () {
                $(this).siblings('.project-details').slideToggle();
                $(this).text($(this).text() === 'View Details' ? 'Hide Details' : 'View Details');
            });
        });
    </script>
</body>
</html>