    @foreach (var i in _collection.ProjectLS())
    {
        <div>
            <h4>@i.Name</h4>
            <p>@i.Description</p>
            <p>@i.Status</p>
            <p>@i.MoreDetail</p>
        </div>
    }


    @foreach (var i in _collection.UserLS())
    {
        <div>
            <h4>@i.name</h4>
            <p>@i.username</p>
            <p>@i.email</p>
            <p>@i.password</p>
            <p>@i.role</p>
        </div>
    }

    <form method="post">
        <button type="submit">Call Test</button>
    </form>

</div>
