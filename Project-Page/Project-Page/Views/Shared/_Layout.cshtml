<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Project Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body style="background-color: lightgray;">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light" style="background-color: white;">
            <div class="container-fluid align-content-center" style="background-color:#0E2F44;">
                <a class="navbar-brand py-3" asp-area="" asp-controller="Home"
                   asp-action="Index" style="color: white;">
                    <h1>Project</h1>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" style="color: white;" asp-area="" asp-controller="Home" asp-action="Index">
                                <h6>Home</h6>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color: white;" asp-area="" asp-controller="Home" asp-action="ContactMe">
                                <h6>Contact Me</h6>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color: white;" asp-area="" asp-area="" asp-controller="Home" asp-action="ProjectOption">
                                <h6>Add Project</h6>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color: white;" asp-area="Identity" asp-page="/Account/Login">
                                <h6>Login</h6>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color: white;" asp-area="Identity" asp-page="/Account/Register">
                                <h6>Registor</h6>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main class="container mt-4">
        @RenderBody()
    </main>

    <br>
    <br>
    <br>
    <br>
    <hr>
    <footer class="footer text-muted">
        <div class="container" style="text-align: center;">
            © 2025 - Project Page - <a asp-area="" asp-controller="Home" asp-action="ContactMe">Contact Me!!</a>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>