<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Naresh_App.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="20"
            >
            <VerticalStackLayout
                BackgroundColor="LightBlue"
                >
                <Image
                    Source="main.png"
                    HeightRequest="185"
                    Aspect="AspectFit"
                    SemanticProperties.Description="zoro_main" />

                <Label
                    Text="Welcome Naresh"
                    Style="{StaticResource Headline}"
                    SemanticProperties.HeadingLevel="Level1" />

                <Label
                    Text="#KTBFFH 💙"
                    Style="{StaticResource SubHeadline}"
                    SemanticProperties.HeadingLevel="Level2"
                    SemanticProperties.Description="#KTBFFH 💙" />

            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
