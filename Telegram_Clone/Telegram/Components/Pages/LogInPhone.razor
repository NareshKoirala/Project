@page "/LogInPhone"

@inject NavigationManager NavigationManager 
@inject GlobalVarables GlobalVarable

@rendermode InteractiveServer

<PageTitle>Log In</PageTitle>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

<div class="container">
    <div class="m-4 d-flex justify-content-between">
        <button class="btn btn-outline-light" style="background-color: #212529; border: none;" @onclick="BackToWelcome">
            <i class="bi bi-arrow-left"></i>
        </button>

        <a href="#" style="text-decoration:none;">Settings</a>
    </div>

    <div class="text-center">

        <h1>Your Phone Number</h1>
        <p>Please confirm your country code <br>and enter your phone number.</p>

        <div>
            @*Will have a drop down country page that acept number. with next button*@
            <select></select>
        </div>

        <button style="padding:1% 20% 1%; background-color: #1562df; color:white; border:none;" @onclick="LogedIn">
            Next
        </button>
    </div>
</div>


@code {
    private void BackToWelcome(MouseEventArgs e)
    {
        NavigationManager.NavigateTo("/");
    }
    private void LogedIn(MouseEventArgs e)
    {
        GlobalVarable.LogedIn = !GlobalVarable.LogedIn;
    }
}