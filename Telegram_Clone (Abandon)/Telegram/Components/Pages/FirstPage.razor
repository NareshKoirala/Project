@page "/"
@inject NavigationManager NavigationManager
@inject GlobalVarables GlobalVariable

@rendermode InteractiveServer

<PageTitle>Welcome</PageTitle>

<style>
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
    }

    .container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        width: 100%;
        background-color: #17212b;
        overflow: hidden;
        position: relative;
    }

    .paper-airplane {
        position: absolute;
        top: 5%;
        width: 100%;
        max-height: 15vh;
        z-index: 2;
    }

    .content {
        text-align: center;
        color: #fff;
        z-index: 1;
        padding: 20px;
        max-width: 600px;
    }

    button {
        background-color: #0088cc;
        border: none;
        color: white;
        padding: 1rem 2rem;
        font-size: 1.1rem;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
        margin-top: 1rem;
    }

        button:hover {
            background-color: #007bb5;
        }

    h1 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    p {
        font-size: 1.2rem;
        line-height: 1.5;
    }

</style>

<div class="container">
    <img src="/image/paper-airplane.png" alt="Paper Airplane" class="paper-airplane" />
    <div class="content">
        <h1>Telegram Desktop</h1>
        <p>Welcome to the official Telegram Desktop app.<br>It's fast and secure.</p>
        <div>
            <button type="button" @onclick="NavToLogIn">Start Messaging</button>
        </div>
    </div>
</div>

@code {
    private void NavToLogIn()
    {
        try
        {
            if (NavigationManager == null)
            {
                throw new InvalidOperationException("NavigationManager is not initialized");
            }

            GlobalVariable.ProcessLogIn = !GlobalVariable.ProcessLogIn;
            NavigationManager.NavigateTo("/LogInPhone");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Navigation error: {ex.Message}");
        }
    }
}